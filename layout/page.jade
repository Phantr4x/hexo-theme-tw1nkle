//- page.jade
extends _partials/layout

block site-title
  != page.title + " Â· " + config.title

block description
  - desc = page.desc || page.title + ' - ' + config.author;
  meta(name="description", content=desc)

block container
  if /^categories\//.test(page.path)
    
  else if /^tags\//.test(page.path)
    
  else
    include mixins
    +page(page)

block paginator
  #paginator
    include mixins
    +paginator(false)

block comments
  #comments
    if !is_home()
      if page.comments
        include _partials/_components/comments
      else
        p= __('page.comment_disable')

block footer
  include _partials/_components/footer