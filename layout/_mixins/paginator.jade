mixin home()
  - var prev = page.prev_link
  - var next = page.next_link
  .paginator
    if page.prev
      a.prev(href=url_for(prev))!= __('paginator.prev') 
    if page.next
      a.next(href=url_for(next))!= __('paginator.next')

mixin post()
  - var prev = page.prev ? page.prev.path : false;
  - var next = page.next ? page.next.path : false; 
  .paginator
    if prev
      a.prev(href=url_for(prev))!= __('paginator.prev-post')
    if next
      a.next(href=url_for(next))!= __('paginator.next-post')
